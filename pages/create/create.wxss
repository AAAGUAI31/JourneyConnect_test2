/* pages/create/create.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.form-container {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.date-row {
  display: flex;
  gap: 24rpx;
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.picker-content {
  padding: 24rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-input {
  flex: 1;
}

.location-btn {
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.stepper-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stepper-unit {
  font-size: 28rpx;
  color: #666666;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999999;
}

.footer-placeholder {
  height: 120rpx;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

