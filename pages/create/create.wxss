/* pages/create/create.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.form-container {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.date-row {
  display: flex;
  gap: 24rpx;
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.picker-content {
  padding: 24rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-input {
  flex: 1;
}

.location-btn {
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 标签点击交互优化 */
.tags-container .t-tag {
  transition: all 0.2s ease;
  cursor: pointer;
  user-select: none;
}

.stepper-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stepper-unit {
  font-size: 28rpx;
  color: #666666;
}

/* 封面上传容器 */
.cover-upload-container {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  width: 100%;
}

/* 图片预览 */
.cover-preview {
  position: relative;
  width: 400rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.cover-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 上传按钮（加号） */
.cover-upload-btn {
  flex-shrink: 0;
  width: 300rpx;
  height: 300rpx;
  display: block;
}

/* 覆盖 t-upload 组件的默认样式 */
.cover-upload-btn.t-upload {
  width: 300rpx !important;
  height: 300rpx !important;
  position: relative;
}

.cover-upload-btn .t-grid {
  width: 100%;
  height: 100%;
}

.cover-upload-btn .t-upload__grid-content {
  width: 100%;
  height: 100%;
  padding: 0;
}

.cover-upload-btn .t-upload__grid {
  width: 100%;
  height: 100%;
}

.cover-upload-btn .t-upload__wrapper {
  width: 100%;
  height: 100%;
}

.cover-upload-btn .t-upload__add-icon {
  display: none !important;
}

.upload-add-btn {
  width: 100%;
  height: 100%;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  background-color: #fafafa;
  display: flex !important;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-sizing: border-box;
  position: relative;
}

.upload-add-btn:active {
  background-color: #f0f0f0;
  border-color: #d0d0d0;
}

.add-icon {
  font-size: 80rpx;
  color: #999999;
  font-weight: 300;
  line-height: 1;
  display: block;
}

.upload-hint-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

.footer-placeholder {
  height: 120rpx;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

