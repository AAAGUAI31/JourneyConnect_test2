/* pages/home/home.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-bar .filter-btn {
  margin-left: 20rpx;
  color: #0052D9;
  font-size: 28rpx;
  font-weight: 500;
}

.activity-list {
  flex: 1;
  padding: 24rpx 32rpx;
}

.activity-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-content {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.card-left {
  flex: 1;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.activity-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-item {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.icon {
  margin-right: 8rpx;
}

.activity-footer {
  margin-top: 16rpx;
}

.creator-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.creator-name {
  font-size: 24rpx;
  color: #666666;
}

.separator {
  color: #e0e0e0;
  margin: 0 8rpx;
}

.member-count {
  font-size: 24rpx;
  color: #999999;
}

.activity-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-left: 24rpx;
  object-fit: cover;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.fab {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 100;
}

.fab-button {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background-color: #0052D9;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 300;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.4);
}

.empty-container {
  padding-top: 200rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

